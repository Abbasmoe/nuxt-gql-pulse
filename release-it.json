{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": "npm run lint && npm run test && npm run prepack"
  }
}
