{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": "npm run lint && npm run test && npm run prepack"
  }
}
